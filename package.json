{
  "name": "spotta",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "mobile": "cd apps/mobile && npm start",
    "mobile:prebuild": "cd apps/mobile && npm run prebuild",
    "ios": "cd apps/mobile && npm run ios",
    "android": "cd apps/mobile && npm run android",
    "typecheck": "npm run --workspaces --if-present typecheck",
    "lint": "npm run --workspaces --if-present lint",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "test": "npm run --workspaces --if-present test",
    "build": "npm run --workspaces --if-present build",
    "ci:quality": "npm run typecheck && npm run lint && npm run format:check",
    "ci:test": "npm run test",
    "ci:all": "npm run ci:quality && npm run ci:test"
  },
  "devDependencies": {
    "@types/node": "^20.14.1",
    "eslint": "^9.3.0",
    "prettier": "^3.3.3",
    "react-test-renderer": "^19.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.40.0"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  },
  "dependencies": {
    "ajv": "^8.17.1"
  }
}
